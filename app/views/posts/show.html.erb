<div class="container">
<h3><%= @post.title %></h3>

<em>Submitted <%= time_ago_in_words(@post.created_at) %> Ago</em>

<strong><%= "#{@post.impressionist_count} views so far!" %></strong>

<p><%= raw @post.content %></p>

<% if current_user.try(:admin?) %>
    <%= pluralize(@post.get_upvotes.size , "person") + " loved your writing" if (@post.get_upvotes.size > 0) %>
<% else %>    
    <%= link_to like_post_path(@post), method: :put do %>
      Upvote
      <%= @post.get_upvotes.size %>
    <% end %>
<% end %>    

<br>

<% if @previous %>
    <%= link_to "Previous", @previous %>
<% end %>
<% if @next %>
    <%= link_to "Next", @next %>
<% end %>

<br>

<p>
    <%= link_to "comments" , "#" , id: "comments-link" %>
</p>

<section id="comments-section">
    <ol id="comments">
        <%= render @comments %>
    </ol>    
        <% unless current_user.try(:admin?) %>
            <%= render "comments/form" %>
        <% end %>
    
    
</section>

<br>


<%= social_share_button_tag("My Site") %>


<% if current_user.try(:admin?) %>
    <%= link_to "Edit" , edit_post_path(@post) %> |
    <%= link_to "Delete" , post_path(@post) , method: :delete , data: {confirm: "Are you sure , Cherry ?"} %>
<% end %>    
</div>
